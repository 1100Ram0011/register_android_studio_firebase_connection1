    <TextView
        android:id="@+id/Rlogo"
        android:layout_width="146dp"
        android:layout_height="57dp"
        android:text="Register"
        android:textColor="@android:color/background_light"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

 <EditText
     android:id="@+id/idEmail"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:ems="10"
     android:hint="Email id"
     android:inputType="textPersonName"
     android:minHeight="48dp"
     android:text=""
     android:textColor="@color/white"
     android:textColorHint="@color/white"
     app:layout_constraintEnd_toEndOf="@+id/idPersonName"
     app:layout_constraintStart_toStartOf="@+id/idPersonName"
     app:layout_constraintTop_toBottomOf="@+id/idPersonName" />

 <EditText
     android:id="@+id/idPersonName"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginStart="32dp"
     android:layout_marginTop="40dp"
     android:layout_marginEnd="32dp"
     android:ems="10"
     android:hint="UserName"
     android:inputType="textPersonName"
     android:shadowColor="#D3CACA"
     android:textColor="@color/material_dynamic_primary99"
     android:textColorHint="@color/white"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/Rlogo"
     app:layout_constraintVertical_bias="0.063"
     tools:ignore="TouchTargetSizeCheck" />

 <EditText
     android:id="@+id/idpsw"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:ems="10"
     android:hint="password"
     android:inputType="textPersonName"
     android:minHeight="48dp"
     android:text=""

     android:textColor="@color/white"
     android:textColorHint="@color/white"
     app:layout_constraintEnd_toEndOf="@+id/idEmail"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/idEmail"
     app:layout_constraintTop_toBottomOf="@+id/idEmail" />

 <EditText
     android:id="@+id/idcompsw"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:ems="10"
     android:hint="confirm_password"
     android:inputType="textPersonName"
     android:minHeight="48dp"
     android:text=""
     android:textColor="@color/white"
     android:textColorHint="@color/white"
     android:textColorLink="@color/white"
     app:layout_constraintEnd_toEndOf="@+id/idpsw"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/idpsw"
     app:layout_constraintTop_toBottomOf="@+id/idpsw" />

 <Button
     android:id="@+id/btnregister"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="47dp"
     android:shadowColor="#D8D2D2"
     android:text="Register"
     android:textColor="@color/black"
     android:textColorHighlight="@color/white"
     android:textColorHint="@color/white"
     android:textColorLink="@color/white"
     app:iconTint="#EDE3E3"
     app:layout_constraintEnd_toEndOf="@+id/idcompsw"
     app:layout_constraintStart_toStartOf="@+id/idcompsw"
     app:layout_constraintTop_toBottomOf="@+id/idcompsw"
     app:rippleColor="#E4E4E4"
     app:strokeColor="#F3F1F1" />

 <TextView
     android:id="@+id/alreadyHaveaccount"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:text="Already Have an Account ?"
     app:layout_constraintEnd_toEndOf="@+id/btnregister"
     app:layout_constraintStart_toStartOf="@+id/btnregister"
     app:layout_constraintTop_toBottomOf="@+id/btnregister" />
</androidx.constraintlayout.widget.ConstraintLayout>